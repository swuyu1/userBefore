/* pages/order/order.wxss */
.item {
    width: 90%;
    margin: 30rpx auto;
    background-color: white;
    border-radius: 15rpx;
    height: 200rpx;
    position: relative;
    font-size: 33rpx;
}

.but {
    margin: 20rpx;
}

.state {
    position: absolute;
    right: 5rpx;
    left: auto;
    bottom: 10rpx;
}

.text {
    position: absolute;
    left: 180rpx;
    top: 20rpx;
}

.type {
    position: absolute;
    right: 15rpx;
    left: auto;
    top: 10rpx;
}

.price {
    position: absolute;
    right: 180rpx;
    bottom: 30rpx;
}

.place {
    position: absolute;
    left: 120rpx;
    top: 20rpx;
}

.time {
    position: absolute;
    left: 120rpx;
    top: 80rpx;
}

.btn {
    height: 110rpx;
}

.release {
    width: 90%;
    margin: 0 auto;
}

.releasebut {
    width: 100%;
}

.top {
    width: 500rpx;
    margin: 180rpx auto;
}